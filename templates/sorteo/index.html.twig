{% extends 'base.html.twig' %}

{% block title %}Sorteo index{% endblock %}

{% block body %}
    <h1>Sorteo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Date</th>
                <th>CantidadNumeros</th>
                <th>Premio</th>
                <th>PrecioNumero</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sorteo in sorteos %}
            <tr>
                <td>{{ sorteo.id }}</td>
                <td>{{ sorteo.name }}</td>
                <td>{{ sorteo.date ? sorteo.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sorteo.cantidadNumeros }}</td>
                <td>{{ sorteo.premio }}</td>
                <td>{{ sorteo.precioNumero }}</td>
                <td>
                    <a href="{{ path('app_sorteo_show', {'id': sorteo.id}) }}">show</a>
                    <a href="{{ path('app_sorteo_edit', {'id': sorteo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sorteo_new') }}">Create new</a>
{% endblock %}
